<Page x:Class="a.Pages.SubAppPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:a.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SubAppPage">

    <Grid>
        <StackPanel Margin="20" >
            <TextBlock Text="Выбрать специальность:" />
            <ComboBox x:Name="SpecialitiesComboBox"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Name" />
            <TextBlock Text="ФИО:" />
            <TextBox x:Name="FullNameTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Адрес:" />
            <TextBox x:Name="AddressTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Email:" />
            <TextBox x:Name="EmailTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Телефон:" />
            <TextBox x:Name="PhoneTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Баллы:" />
            <TextBox x:Name="PointsTextBox" Margin="0,0,0,10"/>
            
            <TextBlock Text="Дата заявки:" />
            <DatePicker x:Name="ApplicationDatePicker" Margin="0,0,0,10"/>
            
            <TextBlock Text="Время заявки:" />
            <TextBox x:Name="ApplicationTimeTextBox" Margin="0,0,0,10"  />
            
            <Button Content="Подать заявку" Click="btnReservation" Margin="0,10,0,0" />
        </StackPanel>
    </Grid>
</Page>
