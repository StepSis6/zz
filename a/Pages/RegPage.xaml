<Page x:Class="a.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:a.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="20">
            <Label Content="Введите ФИО:" />
            <TextBox x:Name="txbName" Margin="0,0,0,10" />

            <Label Content="Введите логин:" />
            <TextBox x:Name="txbLogin" Margin="0,0,0,10" />

            <Label Content="Введите пароль:" />
            <PasswordBox x:Name="txbPassword" Margin="0,0,0,10" />

            <TextBlock Text="Повторите пароль:" Margin="0,0,0,10" />
            <PasswordBox x:Name="psbPassword"  Height="23" 
                          PasswordChanged="psbPassword_PasswordChanged" />
            <Button Content="Создать" x:Name="btnCreate" Margin="0,10,0,0" 
                    Click="btnCreate_Click"/>
        </StackPanel>
    </Grid>
</Page>
